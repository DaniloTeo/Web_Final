extends layout

block content
	div.container
		form(method='POST' action='/admin/service/create' class='page-form')
			label(for='name') Nome do Serviço: 
			input(type='text', name='name')
			br
			br

			label(for='picture') Imagem: 
			input(type='text', name='picture')
			br
			br

			label(for='description') Descrição do Serviço: 
			input(cols='30', rows ='10', type='text', name='description')
			br
			br

			label(for='price') Preço do Serviço: 
			input(type='number', name='price', min="0", step="0.01")
			br
			br

			button(type='submit', value='submit', id='submit') Cadastrar
			a(href='/manage-services')
				button(type='button', name='back', value='back') Voltar