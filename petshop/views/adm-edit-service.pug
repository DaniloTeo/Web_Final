extends layout

block content
	div.container
		form(method='POST' action='/admin' + service.url + '/update' class='page-form')
			label(for='name') Nome do Serviço: 
			input(type='text', name='name', value=service.name)
			br
			br

			label(for='picture') Imagem: 
			input(type='text', name='picture', value=service.picture)
			br
			br

			label(for='description') Descrição do Serviço: 
			input(cols='30', rows ='10', type='text', name='description', value=service.description)
			br
			br

			label(for='price') Preço do Serviço: 
			input(type='number', name='price', min="0", step="0.01", value=service.price)
			br
			br

			button(type='submit', value='submit', id='submit') Salvar
			a(href='/manage-services')
				button(type='button', name='back', value='back') Voltar